<Window x:Class="Diary.PUKWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Height="176" Width="381" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Podaj kod PUK:" Margin="10" Grid.Row="0" />
        <PasswordBox x:Name="txt_PUK" Margin="10" Grid.Row="1" />
        <Button Content="Potwierdź" Margin="10" Grid.Row="2" Click="btn_Confirm_Click" />
    </Grid>
</Window>
